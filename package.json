{
  "name": "bo-cli",
  "version": "1.0.6",
  "description": "Modular Bo CLI with general + Bo Code profiles, pluggable providers, and guardrails encoded via src/contracts/schemas/agent-rules.schema.json",
  "main": "dist/bin/bo.js",
  "type": "module",
  "files": [
    "dist",
    "README.md",
    "agents",
    "LICENSE",
    "scripts/preinstall-clean-bins.mjs",
    "scripts/health-check.mjs"
  ],
  "bin": {
    "bo": "dist/bin/bo.js",
    "apt": "dist/bin/bo.js"
  },
  "scripts": {
    "preinstall": "node scripts/preinstall-clean-bins.mjs",
    "clean": "node -e \"const { rmSync } = require('fs'); try { rmSync('dist', { recursive: true, force: true, maxRetries: 5 }); } catch (error) { if (error && error.code !== 'ENOENT') throw error; }\"",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "prepare": "npm run build",
    "postbuild": "node scripts/postbuild.mjs",
    "dev": "node --loader ts-node/esm src/bin/bo.ts",
    "dev:watch": "node --watch --loader ts-node/esm src/bin/bo.ts",
    "start": "node dist/bin/bo.js",
    "test": "vitest",
    "test:watch": "TS_NODE_TRANSPILE_ONLY=1 TS_NODE_PROJECT=tsconfig.test.json node --watch --loader ts-node/esm --test test/*.test.ts",
    "lint": "eslint . --ext .ts --max-warnings 0",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "health-check": "node scripts/health-check.mjs"
  },
  "bo": {
    "rulebookSchema": "src/contracts/schemas/agent-rules.schema.json"
  },
  "keywords": [
    "cli",
    "codex",
    "openai",
    "ai",
    "agent",
    "productivity"
  ],
  "author": "Bo Security <support@bo.dev>",
  "license": "MIT",
  "homepage": "https://github.com/dragonghidra/bo-cli-RE-claude-code#readme",
  "bugs": {
    "url": "https://github.com/dragonghidra/bo-cli-RE-claude-code/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dragonghidra/bo-cli-RE-claude-code.git"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@types/gradient-string": "^1.1.6",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-complexity": "^1.0.2",
    "globals": "^14.0.0",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "~5.9.2"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.70.1",
    "@google/genai": "^1.30.0",
    "boxen": "^8.0.1",
    "chalk": "^5.6.2",
    "cli-spinners": "^3.3.0",
    "gradient-string": "^3.0.0",
    "nanospinner": "^1.1.0",
    "openai": "^6.9.1",
    "ora": "^9.0.0",
    "vitest": "^4.0.13"
  }
}
